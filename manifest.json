{
    "manifest_version": 2,
    "name": "Download folder manager",
    "version": "0.1",
    "description": "Configure download folders based on file type",
    "icons": {
        "16": "/icons/archive-16.png",
        "24": "/icons/archive-24.png",
        "32": "/icons/archive-32.png",
        "64": "/icons/archive-64.png"
    },
    "browser_action": {
        "default_title": "Download folder manager"
    },
    "background": {
        "persistent": true,
        "scripts": [
            "/scripts/background.js",
            "/scripts/GroupMap.js",
            "/scripts/Group.js"
        ]
    },
    "permissions": [
        "storage",
        "downloads",
        "management"
    ],
    "options_ui": {
        "open_in_tab": true,
        "page": "html/option.html"
    }
}